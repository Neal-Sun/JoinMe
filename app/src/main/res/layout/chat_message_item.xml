<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<!--    android:background="@color/colorPrimary">-->

    <LinearLayout
        android:id="@+id/left_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:layout_marginVertical="10dp">

        <androidx.cardview.widget.CardView
            style="@style/icon"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            app:cardBackgroundColor="@color/colorPrimary">
            <ImageView
                android:id="@+id/chat_message_left_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_icon" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/left_message_text"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/rectangular_round_white"
            android:padding="12dp"
            android:text="Left received message"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginVertical="10dp">

        <TextView
            android:id="@+id/right_message_text"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rectangular_round_white"
            android:padding="12dp"
            android:text="right received message"
            android:textColor="@android:color/black" />

        <androidx.cardview.widget.CardView
            style="@style/icon"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="15dp"
            app:cardBackgroundColor="@color/colorPrimary">
            <ImageView
                android:id="@+id/chat_message_right_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_icon" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>