<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/right_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginVertical="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/right_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangular_round_white"
                android:padding="12dp"
                android:text="right received message"
                android:layout_gravity="right"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"/>

            <ImageView
                android:id="@+id/right_message_image"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            style="@style/icon"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp">
<!--            app:cardBackgroundColor="@color/colorPrimary">-->
            <ImageView
                android:id="@+id/chat_message_right_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_icon" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>